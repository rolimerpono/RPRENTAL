@model RegisterVM

<form id="form-edit">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3">
                    <input asp-for="@Model.EMAIL" hidden />
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="@Model.EMAIL" id="email" name="email" placeholder="Enter email" disabled autofocus autocomplete="off">
                    <span id="email-validation"></span>

                </div>
                <div class="mb-3">
                    <label for="fullname" class="form-label">Fullname</label>
                    <input type="text" class="form-control" asp-for="@Model.NAME" id="name" name="name" placeholder="Enter fullname" autocomplete="off">
                </div>
                <div class="mb-3">
                    <label for="phoneno" class="form-label">Phone Number</label>
                    <input type="number" class="form-control" asp-for="@Model.PHONE_NUMBER" id="phone_number" name="phone_number" placeholder="Enter phone number" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.PASSWORD" id="password" name="password" placeholder="Enter password" autocomplete="new-password">
                </div>
                <div class="mb-3">
                    <label for="confirmpass" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" asp-for="@Model.CONFIRM_PASSWORD" id="confirm_password" name="confirm_password" placeholder="Re-enter password" autocomplete="new-password">
                </div>

                <div class="mb-3">
                    <label for="confirmpass" class="form-label">Role</label>
                    <select asp-for="@Model.ROLE" asp-items="@Model.ROLE_LIST" class="form-select">
                        <option disabled selected>SELECT ROLE</option>
                    </select>
                </div>

            </div>
        </div>
    </div>
</form>


