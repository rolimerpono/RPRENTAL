@model RoomNumberVM

<form id="form-edit">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 pt-md-0 pt-3">                 
                <input asp-for="@Model.RoomNumber!.RoomNo" hidden/>
                <div class="mb-3">
                    <label class="form-label fw-bold">Room Number:</label>
                    <input id="RoomNo" name="RoomNo" type="number" class="form-control" asp-for="@Model.RoomNumber!.RoomNo" placeholder="Enter Room Number" disabled required>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Select Room:</label>
                    <select id="RoomId" name="RoomId" class="form-select form-control border shadow" aria-label="Select Room" asp-for="@Model.RoomNumber!.RoomId" asp-items="@Model.RoomList" required>
                        <option selected></option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Description:</label>
                    <input id="Description" name="Description" type="text" class="form-control" asp-for="@Model.RoomNumber!.Description" placeholder="Enter Description" autocomplete="off">
                </div>
            </div>
        </div>
    </div>

</form>









