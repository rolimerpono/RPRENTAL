@model IEnumerable<Amenity>

<div class="container">
    <div class="row pt-3">
        <div class="col">
            <div class="text-center text-white"><h2>AMENITY LIST</h2></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <button class="btn btn-primary btn-block btn-add" style="width:150px;" type="button">ADD NEW</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table id="tbl_Amenity" class="table table-bordered table-hover text-start" style="border: 1px thin #ccc;">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>                        
                        <th class="text-center">Edit</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Add Modal -->
<div class="modal fade" id="modal-add" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white fw-bold" id="addModalLabel">CREATE AMENITY</h5>
            </div>
            <div id="modal-add-content"></div>
             <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-save" style="width:100px;">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="width:100px;">Close</button>            
            </div>
        </div>
    </div>
</div>

<!--End Add Modal -->


<!-- Edit Modal -->
<div class="modal fade" id="modal-edit" tabindex="-2" aria-labelledby="editModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white fw-bold" id="editModalLabel">EDIT AMENITY</h5>
            </div>
            <div id="modal-edit-content"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-edit" style="width:100px;">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="width:100px;">Close</button>           
            </div>
        </div>
    </div>
</div>

<!--End Edit Modal -->


<!--Start Delete Modal -->
<div class="modal fade" id="modal-delete" tabindex="-3" aria-labelledby="deleteModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" style="max-width:400px; width:100%;">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white fw-bold" id="deleteModalLabel">DELETE AMENITY</h5>
            </div>
            <form id="form-delete" enctype="multipart/form-data">
                <input id="AmenityId" hidden name="AmenityId" />
                <div class="modal-body" style="height:100px;">
                    <div class="row">
                        <div class="col-lg-12">
                            <span class="fw-bold fs-5">Are you sure you want to delete this record?</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-delete" style="width:100px;">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="width:100px;">No</button>                   
                </div>
            </form>
        </div>
    </div>
</div>


<!--End Delete Modal -->
<!--Toaster Notification -->
<div id="toaster" class="toaster"></div>


@section Scripts {
    <script src="~/js/Crud/JSAMenity/JSAmenityCrud.js"></script>
    <script src="~/js/Common/Common.js"></script>
}

