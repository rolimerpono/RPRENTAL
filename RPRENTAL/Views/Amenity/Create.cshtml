@model Amenity

<form id="form-add">  
    <div class="modal-body">
        <div class="row">          
            <div class="col-md-12 pt-md-0 pt-3">              
                <div class="mb-3">
                    <label class="form-label fw-bold">Amenity Name:</label>
                    <input type="text" class="form-control" asp-for="@Model.AMENITY_NAME" placeholder="Enter Amenity Name" autofocus required autocomplete="off">
                    <div class="invalid-feedback">Please provide a amenity name.</div>                     
                </div>          
            </div>
        </div>
    </div> 
</form>