@model RoomAmenityVM

<div id="selected_room">
    <div class="border p-5" style="max-height:250px; overflow-y:auto;">
        <div class="row">             
                <input asp-for="@Model.ROOM_ID" hidden />
                @foreach (var item in @Model.AMENITIES)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pt-md-0">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="selected-item-@item.ID" @(item.IS_CHECK ? "checked" : "") />
                            <label class="form-check-label" for="selected-item-@item.ID">@item.AMENITY_NAME</label>
                        </div>
                    </div>
                }   
           
        </div>
    </div>
   
</div>

@section Scripts {

    <script src="~/js/Crud/JSRoomAmenity/JSRoomAmenity.js"></script>
}


