@model RoomAmenityVM

<div id="selected_room">
    <form>
    <div class="border p-5"> 
            <div class="row">
                <div class="col-md-12 pt-md-0">
                    @foreach (var item in Model.AMENITIES)
                    {
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="selected-item-(@item.ID)" @if (item.IS_CHECK == true)
                            {
                                <text>checked="checked"</text>
                            } />
                            <label class="form-check-label" for="selected-item-(@item.ID)">@item.AMENITY_NAME</label>
                        </div>
                    }
                </div>
            </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-12 pt-md-0">
            <button class="btn btn-primary w-25" type="button">Apply</button>
        </div>
    </div>
    </form>
</div>