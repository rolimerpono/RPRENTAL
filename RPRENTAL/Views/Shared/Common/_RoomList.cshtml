@model PaginatedList<HomeVM>

<div id="room_list">

    <div class="row gy-2 row-cols-1 row-cols-md-2 row-cols-xl-3 mt-5 pb-3" style="border: 1px thin #dcdcdc;">
        @*  DISPLAY ROOM LIST *@
        @foreach (var objRoom in Model.ITEMS)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@objRoom.IMAGE_URL" class="card-img-top" alt="...">
                    <div class="card-body" style="height:250px;overflow-x:auto">
                        <h5 class="card-title fw-bold">@objRoom.ROOM_NAME</h5>
                        <p class="card-text">@objRoom.DESCRIPTION</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span class="fw-bold text-primary">Price :</span> <span class="fw-bold">@objRoom.ROOM_PRICE.ToString("c")</span></li>
                        <li class="list-group-item"><span class="fw-bold text-primary">Max Occupancy :</span> <span class="fw-bold">@objRoom.MAX_OCCUPANCY</span></li>

                    </ul>
                    <div class="card-body d-flex flex-column flex-md-row justify-content-md-between">
                        <div class="mb-2 mb-md-0">
                            <button class="btn btn-outline-success rounded-2 w-100 w-md-auto showDetails" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-@(objRoom.ROOM_ID)">DETAILS</button>
                        </div>
                        @if (objRoom.CHECKIN_DATE > DateOnly.FromDateTime(DateTime.Now))
                        {
                            @if (objRoom.IS_ROOM_AVAILABLE)
                            {
                                <div>
                                    <button id="btnBookNow" class="btn btn-primary rounded-2 w-100 w-md-auto" type="button">BOOK NOW</button>
                                </div>
                              
                            }
                            else
                            {                              
                                <div>
                                    <button id="btnSoldOut" class="btn btn-danger disabled  rounded-2 w-100 w-md-auto" type="button">SOLD OUT</button>
                                </div>
                            }
                        }
                    </div>

                </div>
            </div>


            //DISPLAY MODAL ROOM DETAIL

            <div class="modal fade" id="exampleModal-@(objRoom.ROOM_ID)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl border border-secondary rounded">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title text-success fw-bold" id="exampleModalLabel">ROOM DETAILS</h1>
                        </div>
                        <div class="modal-body m-0">
                            <partial name="Common/_RoomDetail" model="@objRoom" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="width:100px;">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* PAGINATION *@
    <div class="row-cols-1 justify-content-start">
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.PAGE_INDEX == 1 ? "disabled" : "")">
                    <a class="page-link pagination-link" onclick="GetRoomAvailable(1)">
                        <span>First</span>
                    </a>
                </li>

                <li class="page-item @(Model.HAS_PREVIOUS_PAGE ? "" : "disabled")">
                    <a class="page-link pagination-link" onclick="GetRoomAvailable(@(Model.PAGE_INDEX - 1))">
                        <span>Previous</span>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TOTAL_PAGES; i++)
                {
                    <li class="page-item @(Model.PAGE_INDEX == i ? "active" : "")">
                        <a class="page-link pagination-link" onclick="GetRoomAvailable(@i)">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HAS_NEXT_PAGE ? "" : "disabled")">
                    <a class="page-link pagination-link" onclick="GetRoomAvailable(@(Model.PAGE_INDEX + 1))">
                        <span>Next</span>
                    </a>
                </li>
                <li class="page-item @(Model.PAGE_INDEX == Model.TOTAL_PAGES ? "disabled" : "")">
                    <a class="page-link pagination-link" onclick="GetRoomAvailable(@(Model.TOTAL_PAGES))">
                        <span>Last</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>