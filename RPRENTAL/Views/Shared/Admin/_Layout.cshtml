@inject UserManager<ApplicationUser> _UserManager
@inject SignInManager<ApplicationUser> _SignInManager

<!DOCTYPE html>
<html data-bs-theme="dark" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"]RP HOTEL</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/datables.bootstrap.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=ADLaM+Display&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abel&amp;display=swap">  
    <link rel="stylesheet" href="~/css/admin/sidebar.css" />
    <link rel="stylesheet" href="~/css/apexcharts.css" />
    <link rel="stylesheet" href="~/css/styles.css">


</head>

<body style="font-family: Abel, sans-serif;">


        <div class="container-fluid bg-dark-subtle fixed-top border-bottom border-1 text-white" style="height:56px;">
            <div class="row fixed-top">
                <div class="col">
                    <nav class="navbar navbar-expand-lg px-3">
                        <button id="navbar-toggler-btn" class="navbar-toggler fs-6" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-menu" aria-controls="offcanvas-menuLabel">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <span class="navbar-brand px-5 d-none d-lg-block">RP HOTEL</span>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col d-flex flex-no-wrap justify-content-end pt-3 end-0">
                    @if (_SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link text-white px-0 d-none d-sm-block">
                            <span class="m-4">Welcome, @User.Identity.Name.ToLower()</span>
                        </a>                 
                    }
                </div>
            </div>
        </div>


    <!--Off Canvas-->


    <div class="offcanvas offcanvas-start bg-dark-subtle border-end border-1" tabindex="-1" id="offcanvas-menu" aria-labelledby="offcanvas-menuLabel">

        <div class="sidebar bg-dark-subtle">
            <ul class="nav flex-column border-top border-1">
              
                <li class="nav-item">
                    <a class="nav-link text-white px-0" asp-controller="Dashboard" asp-action="Index">
                        <span class="m-4">Dashboard</span>                      
                    </a>                 
                </li>
          
                <li class="nav-item">
                    <a class="nav-link text-white px-0" asp-controller="Home" asp-action="Index">
                        <span class="m-4">Home</span>
                    </a>
                </li>
              
                <li class="nav-item">
                    <a class="nav-link text-white px-0" href="#">
                        <span class="m-4">About</span>
                    </a>
                </li>
              
                <li class="nav-item">
                    <a class="nav-link text-white px-0" href="#">
                        <span class="m-4">Gallery</span>
                    </a>
                </li>
              
                <li class="nav-item">
                    <a class="nav-link text-white px-0" href="#">
                        <span class="m-4">Services</span>
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link text-white px-0" href="#" role="button" id="dropdown-settings" aria-expanded="false">
                        <span class="m-4 pe-5">Manage</span>
                        <i class="bi bi-caret-right" id="settings-icon"></i>
                    </a>
                    <ul class="dropdown-menu border-0" id="settings-menu">
                   
                        <li><a class="dropdown-item text-white" asp-controller="Room" asp-action="Index"><span class="mx-3">Room</span></a></li>
                        <li><a class="dropdown-item text-white" asp-controller="RoomNumber" asp-action="Index"><span class="mx-3">Room Number</span></a></li>
                        <li><a class="dropdown-item text-white" asp-controller="Amenity" asp-action="Index"><span class="mx-3">Amenity</span></a></li>
                        <li><a class="dropdown-item text-white" asp-controller="RoomAmenity" asp-action="Index"><span class="mx-3">Room Amenity</span></a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-0" asp-controller="Booking" asp-action="Index">
                        <span class="m-4">Booking List</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-0" asp-controller="Account" asp-action="Index">
                        <span class="m-4">Register User</span>
                    </a>
                </li>
              


                <li class="nav-item position-absolute bottom-0 w-100">
                    <a class="nav-link text-white px-0 btn-logout text-center" asp-controller="Home">
                        <span class="m-4">Logout</span>
                    </a>                   
                </li>


              
            </ul>
        </div>

    </div>

    <!--Off canvas end-->

    <main role="main" class="pb-3 min-vh-100">
        @RenderBody()
    </main>
 
    <div class="pb-3">

    </div>
    

    <partial name="_footer" />

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.bootstrap5.js"></script>

    <script src="~/js/bs-init.js"></script>
    <script src="~/js/Layout/Home/JSAccount.js"></script>
    <script src="~/js/Crud/JSBooking/JSBookingCrud.js"></script>
    <script src="~/js/Admin/sidebar.js"></script>
    <script src="~/js/apexcharts.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


