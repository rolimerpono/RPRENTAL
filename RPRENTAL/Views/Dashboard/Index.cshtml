<div class="container-fluid pt-5">
    <div class="row pt-5">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <span class="fs-3">Dashboard</span>
        </div>
    </div>
    <div class="row pt-3">


        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <div class="card border-primary mb-3">
                <div class="card-header fw-bold">Customer Bookings</div>
                <div class="card-body" style="overflow:hidden">
                    <div id="customer_increase_decrease_status"  data-colors='["--bs-warning","--bs-primary"]'>
                    </div>     
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">

            <div class="card border-warning mb-3">
                <div class="card-header fw-bold">Total User[s]</div>
                <div class="card-body">
                    <span id="total_user_count" class="fs-2 fw-bold text-white"></span>
                    <div class="float-end">
                        <div id="total_user_radial_chart" data-colors='["--bs-warning"]'></div>
                    </div>
                    <div class="pt-3">
                        <p id="user_increase_decrease_status"></p>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">

            <div class="card border-info mb-3">
                <div class="card-header fw-bold">Total Booking[s]</div>
                <div class="card-body">
                    <span id="total_booking_count" class="fs-2 fw-bold text-white"></span>
                    <div class="float-end">
                        <div id="total_booking_radial_chart" data-colors='["--bs-info"]'></div>                     
                    </div>    
                    <div class="pt-3">
                        <p id="booking_increase_decrease_status"></p>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <div class="card border-primary mb-3">
                <div class="card-header fw-bold">Total Revenue</div>
                <div class="card-body">
                    <span id="total_revenue_count" class="fs-2 fw-bold text-white"></span>
                    <div class="float-end">
                        <div id="total_revenue_radial_chart" data-colors='["--bs-primary"]'></div>                      
                    </div>
                    <div class="pt-3">
                        <p id="revenue_increase_decrease_status"></p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--Another Row-->

    <div class="row pt-2">

        <div class="col-lg-6">
            <div class="card border-primary mb-3">
                <div class="card-header fw-bold">Total Revenue</div>
                <div class="card-body">
                    <span id="total_revenue_count" class="fs-2 fw-bold text-white"></span>
                    <div class="float-end">
                        <div id="total_revenue_radial_chart" data-colors='["--bs-primary"]'></div>
                    </div>
                    <div class="pt-3">
                        <p id="revenue_increase_decrease_status"></p>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

@section scripts {

    <script src="~/js/Admin/Dashboard/radialChart.js"></script>
    <script src="~/js/Admin/Dashboard/getTotalBookingsRadialChart.js"></script>
    <script src="~/js/Admin/Dashboard/getTotalUserRadialChart.js"></script>
    <script src="~/js/Admin/Dashboard/getTotalRevenueRadialChart.js"></script>
    <script src="~/js/Admin/Dashboard/getCustomerBookingPieChart.js"></script>
    <script src="~/js/Admin/Dashboard/getCustomerAndBookingLineChart.js"></script>
}